pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/jglick/simple-maven-project-with-tests.git'
                echo 'Github clone repo..'
            }
        }

        stage('Build') {
            steps {
 		echo 'Building the project..'
                sh 'mvn clean package -Dmaven.test.failure.ignore=true'
                
            }
        }
    }
}
