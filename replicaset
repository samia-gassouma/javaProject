apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: myapp-rs
spec:
  replicas: 1
  selector:
    matchLabels:
      app: myapp
  template:
    metadata:
      labels:
        app: myapp
    spec:
      containers:
      - name: myapp-container
        image: gassouma530/testdeploy:student_managementv2
        ports:
        - containerPort: 8089

---


apiVersion: v1
kind: Service
metadata:
  name: first-service
spec:
  selector:
    app: my-app   # doit correspondre au label du Pod
  ports:
  - protocol: TCP
    port: 8089             # port interne du service
    targetPort: 8089       # port exposé par le Pod
    nodePort: 30080        # port externe fixe (entre 30000–32767)
  type: NodePort


---

apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: mysql-rs
spec:
  replicas: 1
  selector:
    matchLabels:
      app: mysql
  template:
    metadata:
      labels:
        app: mysql
    spec:
      containers:
      - name: mysql-container
        image: mysql:8.0
        ports:
        - containerPort: 3306
        env:
        - name: MYSQL_ROOT_PASSWORD
          value: "rootroot"  # <-- set your desired root password here


---


apiVersion: v1
kind: Service
metadata:
  name: sql-service
spec:
  selector:
    app: mysql   # doit correspondre au label du Pod
  ports:
  - protocol: TCP
    port: 3306             # port interne du service
    targetPort: 3306       # port exposé par le Pod
